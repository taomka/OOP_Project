<Window x:Class="Service_order_service.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Service_order_service"
        mc:Ignorable="d"
        Title="LoginWindow" Height="600" Width="1000">
    <Grid Background="#ffdadada">
        <Border Background="White" Margin="30" Padding="20" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Email:"/>
                <TextBox x:Name="EmailTextBox" Margin="0,5,0,15" />

                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20"/>

                <Button Content="Login" Background="#ff6200ee" Foreground="#ffffffff" Width="100" Height="30" HorizontalAlignment="Center" Click="Login_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
